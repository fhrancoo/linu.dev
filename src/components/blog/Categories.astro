---
import { Icon } from "astro-icon";
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");

const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

{
  tags.map((tag) => (
    <a href={`/tags/${tag}`} class="md:w-full lg:w-auto flex items-center justify-start w-full gap-x-2 text-text font-medium bg-astro-blue/30 border border-astro-blue p-2 rounded-full hover:bg-astro-blue transition-all duration-300 ease-in-out">
      <Icon name={tag} class="w-6 h-6 rounded-full" />
      <span class="text-sm capitalize">{tag}</span>
    </a>
  ))
}
